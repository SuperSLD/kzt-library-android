<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.example.app_ui.common.view.JTProgressBarColored
        android:id="@+id/documents_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/documents_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/documents_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@color/colorBackSecondary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/books_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_books_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:background="@drawable/shape_white_top_corners"
                android:clipChildren="false">

                <online.juter.supersld.view.input.selectors.JTHorizontalSwitch
                    android:id="@+id/books_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/books_recommendation_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>