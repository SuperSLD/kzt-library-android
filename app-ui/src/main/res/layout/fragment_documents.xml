<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.example.app_ui.common.view.JTProgressBarColored
        android:id="@+id/documents_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/documents_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/documents_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="@color/colorBackSecondary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/documents_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/documents_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginHorizontal="24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:background="@drawable/shape_white_top_corners"
                android:clipChildren="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/documents_requests"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/documents_requests_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>