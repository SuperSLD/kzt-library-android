<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/result_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal">

        <com.example.app_ui.common.view.ToolbarView
            android:id="@+id/result_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/result_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"/>

        <TextView
            android:id="@+id/result_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBack"
                app:cardCornerRadius="21dp"
                app:cardElevation="8dp"
                android:layout_marginEnd="20dp"
                >
                <online.juter.supersld.view.input.calendar.JTSquareLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp"
                    >
                    <TextView
                        android:id="@+id/result_count"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        tools:text="23"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="48sp"
                        android:fontFamily="@font/roboto_regular"
                        />
                    <TextView
                        android:id="@+id/result_count_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Списка создано"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        />
                </online.juter.supersld.view.input.calendar.JTSquareLinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBack"
                app:cardCornerRadius="21dp"
                app:cardElevation="8dp"
                >
                <online.juter.supersld.view.input.calendar.JTSquareLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >
                    <online.juter.supersld.view.data.JTValueViewer
                        android:id="@+id/result_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="24dp"
                        />
                </online.juter.supersld.view.input.calendar.JTSquareLinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_return_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            style="@style/ButtonEmpty"
            android:text="@string/lesson_finish_button"/>

    </LinearLayout>

</LinearLayout>
