<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.example.app_ui.common.view.JTProgressBarColored
        android:id="@+id/profile_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:visibility="gone">

        <LinearLayout android:id="@+id/profile_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@color/colorBackSecondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    app:cardCornerRadius="56dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorBorder">

                    <ImageView
                        android:id="@+id/profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="24sp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Тамбов Никита\nВитальевич"/>

                    <TextView
                        android:id="@+id/profile_company_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Руководитель проектов"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_dark_rounded_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eco"
                    android:layout_margin="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="24dp"
                    android:layout_marginVertical="16dp">

                    <TextView
                        android:id="@+id/profile_coins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextWhite"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/central_coins"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextWhite"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/central_coins_subtitle"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_ach_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingVertical="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:background="@drawable/shape_white_top_corners"
                android:clipChildren="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/profile_ideas"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="24dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profile_ideas_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="12dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>