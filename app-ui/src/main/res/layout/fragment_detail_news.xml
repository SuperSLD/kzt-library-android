<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.app_ui.common.view.JTProgressBarColored
        android:id="@+id/detail_news_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_news_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorBackSecondary"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/news_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorTextBlack"
                android:textSize="24sp"
                tools:text="Новогодний корпоратив" />

            <TextView
                android:id="@+id/news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorTextBlack"
                android:textSize="18sp"
                tools:text="Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний корпоратив Новогодний " />

            <LinearLayout
                android:id="@+id/news_layout_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/news_event_date_text"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    tools:text="18.01.2025 14:00" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/news_subscribe_button"
                style="@style/ButtonSolid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/news_subscribe_button"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

