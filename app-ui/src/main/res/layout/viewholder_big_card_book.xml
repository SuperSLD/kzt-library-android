<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/big_book_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:paddingHorizontal="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_cover_image"
            android:layout_width="87dp"
            android:layout_height="134dp"
            android:scaleType="centerCrop"
            android:background="@color/colorBackSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/book_cover_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                tools:text="Мастер и Маргарита" />

            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                tools:text="М.А Булгаков" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingVertical="3dp"
                app:cardBackgroundColor="@color/colorBackSecondary"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="2dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/book_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_small_star"
                    tools:text="5.03" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>